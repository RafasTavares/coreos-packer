{
    "type": "virtualbox-iso",
        
    "vm_name": "packer-{{user `name`}}-{{user `release`}}-{{user `version`}}",
    "iso_checksum": "",
    "iso_checksum_type": "none",
    "iso_url": "http://{{user `release`}}.release.core-os.net/amd64-usr/{{user `version`}}/coreos_production_iso_image.iso",
    "guest_os_type": "Linux26_64",
    
    "hard_drive_interface": "sata",
    "disk_size": "{{user `disk_size`}}",
    "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "{{user `memory`}}"],
        ["modifyvm", "{{.Name}}", "--cpus", "{{user `cpus`}}"]
    ],
    "http_directory": "{{user `files_directory`}}",

    "headless": "false",
    "guest_additions_mode": "disable",
    "output_directory": "temporary-build",
    
    "boot_wait": "33s",
    "boot_command": [
        "sudo -i;<enter>",
        "systemctl stop sshd.socket;<enter>",
        "wget http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{user `ignition_name`}};<enter>",
        "cat {{user `ignition_name`}};<enter>",
        "coreos-install -d /dev/sda -C {{ user `release` }} -i {{user `ignition_name`}};<enter>",
        "reboot<enter>"
    ],  
    
    "communicator": "ssh",
    "ssh_port": 22,
    "ssh_username": "core",
    "ssh_private_key_file": "{{user `vagrant_insecure_private_key`}}",
    "ssh_timeout": "33m",

    "shutdown_command": "sudo -S shutdown -P now"
}